<%= form_for [:admin, @train] do |form| %>
<%= render 'common/errors', resource: @train %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :train_name %>
  </div>

  <div>
    <%= form.label :currentstation, "Текущая станция"%>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div>
    <%= form.label :route, "Выберите маршрут"%>
    <%= form.collection_select :route_id, Route.all, :id, :title %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @train.new_record? ? 'Создать' : 'Изменить'}" %>
  </div>
<% end %>
